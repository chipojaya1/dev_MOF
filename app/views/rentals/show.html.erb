<p id="notice"><%= notice %></p>
<div class="property_show">
  <div class="property_show_info">
  <p>Name:<%= @rental.name %></p>
  <p>Rent:<%= @rental.rent %></p>
  <p>Address:<%= @rental.address %></p>
  <p>Age:<%= @rental.age %>years</p>
  <p>Feedback:<%= @rental.feedback %></p>

  <% n = 0 %>
  <% @rental.depots.each do |depot|%>
    <p>Closest train depots <%= n += 1 %></p>
    <p>Route:<%= depot.route %></p>
    <p>Station:<%= depot.station %></p>
    <p>Time:<%= depot.walking_distance %>minutes</p>
  <% end %>
  <br>

  <%= link_to 'Edit', edit_rental_path(@rental) %> |
  <%= link_to 'Back', rentals_path %>
  </div>
</div>
